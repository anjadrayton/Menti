<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="mentorships-tab" data-toggle="tab" href="#mentorships" role="tab" aria-controls="mentorships" aria-selected="true">Mentorships</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="created-applications-tab" data-toggle="tab" href="#created-applications" role="tab" aria-controls="created-applications" aria-selected="false">Created Applications</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="received-applications-tab" data-toggle="tab" href="#received-applications" role="tab" aria-controls="received-applications" aria-selected="false">Received Applications</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="mentorships" role="tabpanel" aria-labelledby="mentorships-tab">
    <%= link_to "Create New Mentorship", new_mentorship_path, class: "btn btn-primary" %>
    <br><br>
    <ul>
      <% @mentorships.each do |mentorship| %>
        <li><%= mentorship.subject %> <%= link_to "View", mentorship_path(mentorship) %> <%= link_to "Edit", edit_mentorship_path(mentorship) %> <%= link_to 'Delete', mentorship_path(mentorship), method: :delete, data: { confirm: "Are you sure?" } %></li>
      <% end %>
    </ul>
  </div>
  <div class="tab-pane fade" id="created-applications" role="tabpanel" aria-labelledby="created-applications-tab">
    <ul>
      <% @created_applications.each do |application| %>
        <li><%= application.mentorship.subject %> - <%= application.mentor.first_name %> <%= application.mentor.last_name %> - <%= application.status %> <%= link_to "View", mentorship_application_path(application) %> </li>
      <% end %>
    </ul>
  </div>
  <div class="tab-pane fade" id="received-applications" role="tabpanel" aria-labelledby="received-applications-tab">
    <ul>
      <% @received_applications.each do |application| %>
        <li><%= application.mentorship.subject %> - <%= application.user.first_name %> <%= application.user.last_name %> - <%= application.status %> <%= link_to "View", mentorship_application_path(application) %></li>
      <% end %>
    </ul>
  </div>
</div>
