<div class="container">
  <h1>Browse mentorships</h1>
  <br>
  <%= form_tag mentorships_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a mentorship by subject"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  <br>
  <ul>
    <% @mentorships.each do |mentorship| %>
      <li>
        Subject: <%= mentorship.subject %><br>
        Mentor: <%= mentorship.user.first_name %> <%= mentorship.user.last_name %><br>
        <%= link_to "View", mentorship_path(mentorship) %>
      </li>
    <% end %>
  </ul>
  <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <% if current_user %>
    <%= link_to "Dashboard", dashboard_path %>
  <% end %>
</div>
